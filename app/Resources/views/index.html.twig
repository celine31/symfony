{% extends 'base.html.twig'%} 

{% block title %}index{% endblock %} 

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/commerce.css') }}" type="text/css" />
{% endblock %}


{% block body %} 

    <h1>Produits</h1>
    
        <button onclick="redirection()"> ajouter </button>
<div id="container"> 
        {% for produit in tabproduit %}
            {% set idImg = file_exists('img/prod_'~produit.id_produit~'_v.jpg') ? produit.id_produit : 0 %}
            <div class="blocProduit" >
                <img src="{{asset('img/prod_'~idImg~'_v.jpg?alea='~random())}}"onclick="detail({{ produit.id_produit }} )"/> 
                <div class="nom">{{ produit.nom }}</div>
                <div class="prix">{{ produit.prix }}</div>
                <button onclick="editer(event, {{ produit.id_produit }} )"> editer </button>
                <button onclick="supprimerProduit(event, {{ produit.id_produit }} )"> supprimer </button>
            </div>

        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src={{asset('js/index.js')}}></script>
    <script type="text/javascript" src={{asset('js/Ajax.js')}}></script>
{% endblock %}
